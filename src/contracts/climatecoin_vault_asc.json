{
  "name": "climatecoin_vault_arc4",
  "methods": [
    {
      "name": "mint_climatecoin",
      "desc": "mints climatecoins",
      "args": [],
      "returns": { "type": "uint64" }
    },
    {
      "name": "set_minter_address",
      "desc": "sets the nft minter address",
      "args": [{ "name": "minter_address", "type": "address" }],
      "returns": { "type": "address" }
    },
    {
      "name": "set_oracle_address",
      "desc": "sets the oracle address",
      "args": [{ "name": "oracle_address", "type": "address" }],
      "returns": { "type": "address" }
    },
    {
      "name": "set_swap_price",
      "desc": "sets the swap price. (signed by oracle)",
      "args": [{ "name": "swap_price", "type": "uint64" }],
      "returns": { "type": "uint64" }
    },
    {
      "name": "swap_nft_to_fungible",
      "desc": "swap NFT to Climatecoin",
      "args": [{ "name": "nft_id", "type": "asset" }],
      "returns": { "type": "uint64" }
    },
    {
      "name": "create_nft",
      "desc": "Create an nft with appropriate parameters, return its id",
      "args": [
        { "name": "metadata_hash", "type": "string" },
        { "name": "nft_parameters", "type": "string" },
        { "name": "total_supply", "type": "uint64" }
      ],
      "returns": { "name": "asset-id", "type": "uint64" }
    },
    {
      "name": "move",
      "desc": "Moves the asset passed from one account to another",
      "args": [
        { "name": "royalty_asset", "type": "asset" },
        { "name": "from", "type": "account" },
        { "name": "to", "type": "account" },
        { "name": "amount", "type": "uint64" }
      ],
      "returns": { "type": "void" }
    }
  ]
